<% layout("layouts/boilerplate") %>


     <div class="row"> 
        <!-- <h1 class="offset-3">SignUp on Traveleon</h1> -->
        <div class="col-6 offset-3 mt-3">
            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <h1 class="mt-3 mb-3">SignUp on Traveleon</h1>
                 <div class="mb-3">
                    <label for="username" class="form-label">username</label>
                    <input 
                    type="text" 
                    name="username" 
                    id="username"
                    placeholder="enter a username" 
                    class="form-control" 
                    required>
                    </div>


                <div class="mb-3"> 
                    <label for="email" class="form-label">email</label>
                    <input 
                    type="email" 
                    name="email" 
                    id="email"
                    placeholder="email" 
                    class="form-control" 
                    required>
                    <div class="invalid-feedback">email should be valid</div>
                    </div>  

                     <div class="mb-3">
                    <label for="password" class="form-label">password</label>
                    <input 
                    type="password" 
                    name="password" 
                    id="password"
                    placeholder="enter a password" 
                    class="form-control" 
                    required>
                    <div class="invalid-feedback">Title should be valid</div>
                    </div> 

                    <button class="btn btn-success">SignUp</button>

            </form>
        </div>
    </div> 